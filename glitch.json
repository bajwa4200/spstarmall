{
  "install": "pip install -r requirements.txt",
  "start": "python manage.py migrate && python manage.py runserver 0.0.0.0:3000",
  "watch": {
    "install": {
      "include": ["requirements.txt"]
    },
    "restart": {
      "include": ["*.py", "templates/**/*.html", "static/**/*.*"]
    },
    "throttle": 1000
  }
}
